# ============================================
# ExtendBot - Extended Exchange Trading Bot
# ============================================
# Copy this file to .env and fill in your credentials

# ============================================
# REQUIRED - Extended Exchange Credentials
# ============================================
# Get these from Extended Exchange dashboard
API_KEY=your_api_key_here
PRIVATE_KEY=your_stark_private_key_here
PUBLIC_KEY=your_stark_public_key_here
VAULT_ID=your_vault_id_here

# Network: 'true' for testnet, 'false' for mainnet
TESTNET=false

# ============================================
# TRADING SETTINGS
# ============================================
# Primary trading symbol (use Extended format: BTC-USD, ETH-USD, SOL-USD)
SYMBOL=SOL-USD

# Multi-asset mode (trade multiple assets simultaneously)
MULTI_ASSET_MODE=false
MULTI_ASSETS=BTC-USD,ETH-USD,SOL-USD

# Timeframe for candles (1m, 5m, 15m, 1h, 4h)
TIMEFRAME=1m

# Maximum leverage (1-20x depending on market)
MAX_LEVERAGE=5

# Maximum concurrent positions
MAX_POSITIONS=3

# Base position size as percentage of account
BASE_POSITION_SIZE_PCT=25

# ============================================
# STRATEGY SETTINGS
# ============================================
# Bot mode: rule_based, hybrid, ai
BOT_MODE=rule_based

# Minimum signal strength to trigger trade
SIGNAL_THRESHOLD=12

# ============================================
# RISK MANAGEMENT
# ============================================
# Maximum daily loss percentage (triggers kill switch)
MAX_DAILY_LOSS_PCT=5.0

# Maximum drawdown percentage (triggers kill switch)
MAX_DRAWDOWN_PCT=10.0

# Kill switch settings
KILL_SWITCH_DAILY_LOSS_PCT=5.0
KILL_SWITCH_DRAWDOWN_PCT=10.0

# ============================================
# POSITION SIZING (Kelly Criterion)
# ============================================
KELLY_ENABLED=true
KELLY_FRACTION=0.5
KELLY_MIN_TRADES=20
KELLY_MAX_POSITION_PCT=25

# ============================================
# TP/SL DEFAULTS
# ============================================
DEFAULT_TP_PCT=3.0
DEFAULT_SL_PCT=1.5

# ============================================
# PAPER TRADING (Simulated)
# ============================================
# Set to 'true' to run in paper trading mode (no real trades)
PAPER_TRADING=false
PAPER_TRADING_BALANCE=1000

# ============================================
# TELEGRAM NOTIFICATIONS (Optional)
# ============================================
# Get token from @BotFather, chat_id from @userinfobot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ============================================
# DATABASE (Optional - PostgreSQL)
# ============================================
# Format: postgresql://user:password@host:port/database
DATABASE_URL=

# ============================================
# ML AUTO-TRAINER (Optional)
# ============================================
AUTO_TRAIN_ENABLED=false
